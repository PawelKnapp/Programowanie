@{
    ViewData["Title"] = "Dodaj Film";
}

<h1>Add Movie</h1>
<form asp-action="AddMovie" method="post">
    <input type="hidden" name="actorId" value="@ViewBag.ActorId" />

    <div class="form-group">
        <label for="movieId">Movie</label>
        <select name="movieId" class="form-control">
            @foreach (var movie in ViewBag.Movies)
            {
                <option value="@movie.Id">@movie.Title</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="roleName">Character name</label>
        <input type="text" name="roleName" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>